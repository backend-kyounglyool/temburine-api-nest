generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  authType  AuthType  @map("auth_type")
  authId    String?   @unique @map("auth_id")
  createdAt DateTime  @default(now()) @map("created_at")
  deletedAt DateTime? @map("deleted_at")

  agreement    Agreement[]    @relation("userToAgreement")
  itemCategory ItemCategory[] @relation("userToItemCategory")

  @@map("users")
}

model Agreement {
  id                          Int      @id @default(autoincrement())
  userId                      Int      @unique @map("user_id")
  isAgreeIntervalNotification Boolean  @map("is_agree_interval_notification")
  createdAt                   DateTime @default(now()) @map("created_at")
  updatedAt                   DateTime @updatedAt

  user User @relation("userToAgreement", fields: [userId], references: [id])

  @@map("agreement")
}

model ItemCategory {
  id           Int      @id @default(autoincrement())
  userId       Int      @map("user_id")
  categoryName String   @map("category_name")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt

  user User @relation("userToItemCategory", fields: [userId], references: [id])

  @@map("item_category")
}

enum AuthType {
  KAKAO
}
